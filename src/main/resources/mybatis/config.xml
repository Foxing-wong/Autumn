    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://192.168.33.10:3306/cijianus_double?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect "/>
                <property name="username" value="cijianus_double"/>
                <property name="password" value="cijianus_double"/>
            </dataSource>
        </environment>
        <environment id="production">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://SAE_MYSQL_HOST_M:SAE_MYSQL_PORT/SAE_MYSQL_DB?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect "/>
                <property name="username" value="SAE_MYSQL_USER"/>
